<hc:Window
    x:Class="InventarioTPV.ConsultaCantidad"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"        
    Title="{DynamicResource Cantidad}"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    WindowState="Normal"
    Height="165"  Width="250">
    <Grid>
        <StackPanel
            Margin="20,20,20,10"
            Orientation="Vertical">
            
            <hc:NumericUpDown 
                x:Name="txtCantidad"
                FontSize="16pt"
                DecimalPlaces="0"
                Increment="1"
                hc:InfoElement.Placeholder="{DynamicResource Cantidad}"
                Style="{StaticResource NumericUpDownExtend}" />

            <Button
                x:Name="btnAceptar1"
                FontSize="12pt"
                Height="40"
                Width="120"
                Content="{DynamicResource Aceptar}"
                Background="{DynamicResource PrimaryBrush}" 
                Foreground="{DynamicResource TextIconBrush}" Margin="0,30,0,0" />

        </StackPanel>
        
    </Grid>
</hc:Window>
