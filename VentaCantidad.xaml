<Window x:Class="Inventario_y_Contabilidad.VentaCantidad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventario_y_Contabilidad"
        mc:Ignorable="d"        
        Title="Cantidad"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowState="Normal"
        Height="171"  Width="250">
    <Grid>
        <Label Content="Cantidad:"
               HorizontalContentAlignment="Center" Margin="10,10,0,0" FontSize="14pt" HorizontalAlignment="Left" Width="224" Height="44" VerticalAlignment="Top"
               />
        <TextBox x:Name="txtCant" 
                 Margin="10,45,10,0" 
                 TextWrapping="Wrap" 
                 Text="1"
                 HorizontalContentAlignment="Center"
                 KeyDown="txtCant_KeyDown" FontSize="16pt" Height="37" VerticalAlignment="Top"/>

        <Button x:Name="btnAceptar"
                Content="Aceptar" Margin="10,95,10,0" Height="28" VerticalAlignment="Top" Click="btnAceptar_Click" Foreground="White"/>

    </Grid>
</Window>
